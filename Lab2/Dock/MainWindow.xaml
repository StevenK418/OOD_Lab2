<Window x:Class="Dock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dock"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <!--Exercise 4: DockPanel. Create a Dock Panel using the code below.-->
    <DockPanel LastChildFill="true">
        <!--<Button Content="Dock-Top" DockPanel.Dock="Top"/>-->
        <TextBlock Background="AliceBlue" DockPanel.Dock="Left" Text="Left"/>
        <TextBlock Background="Green" DockPanel.Dock="Bottom" Text="Bottom"/>
        <TextBlock Background="Red" DockPanel.Dock="Right" Text="Right"/>
        <TextBlock Background="Blue" DockPanel.Dock="Top" Text="Top"/>
        <TextBlock Background="Yellow" Text="Remainder"/>
    </DockPanel>
</Window>
